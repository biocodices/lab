<% unless defined?(omit_header) && omit_header %>
  <div class="header">
    <div class="title">
      <h1>
        <%= fa_icon 'tint' %>
        DNA Extractions
      </h1>
    </div>
    <div class="actions">
      <%= link_to 'Manually create a new DNA Extraction record', new_dna_extraction_path,
        class: "btn btn-default" %>
    </div>
  </div>
<% end %>

<table class='table table-striped table-condensed'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Extracted from</th>
      <th>Extraction date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dna_extractions.each do |dna_extraction| %>

      <tr class="display-row collapsed" data-toggle="collapse" data-target="#dna-detail-<%= dna_extraction.id %>" class="accordion-toggle">
        <td><%= dna_extraction.id %></td>
        <td>
          <%= link_to edit_sample_path(dna_extraction.sample) do %>
            Sample#<%= dna_extraction.sample.id %>
          <% end %> 
          from <%= dna_extraction.patient.try(:full_name) || 'No patient associated with this DNA sample?' %></td>
        <td><%= dna_extraction.date || dna_extraction.created_at %></td>
        <td><%= link_to 'Show', dna_extraction_path(dna_extraction) %></td>
        <td><%= link_to 'Edit', edit_dna_extraction_path(dna_extraction) %></td>
        <td><%= link_to 'Destroy', dna_extraction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>

      <tr class="hidden-row">
        <td colspan="8">
          <div class="accordion-body collapse" id="dna-detail-<%= dna_extraction.id %>">
            <div class="padding">

              <% unless dna_extraction.nanodrop_quantifications.count.zero? %>
                <table class="table table-bordered table-condensed table-striped quantification">
                  <% dna_extraction.nanodrop_quantifications.decorate.each do |nanodrop_quantification| %>
                    <%= render nanodrop_quantification %>
                  <% end %>
                </table>
              <% end %>

              <% unless dna_extraction.qubit_quantifications.count.zero? %>
                <table class="table table-bordered table-condensed table-striped quantification">
                  <% dna_extraction.qubit_quantifications.decorate.each do |qubit_quantification| %>
                    <%= render qubit_quantification %>
                  <% end %>
                </table>
              <% end %>

            </div><!-- .padding -->
          </div><!-- accordion-body -->
        </td>
      </tr>

    <% end %>
  </tbody>
</table>
