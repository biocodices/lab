<p id="notice"><%= notice %></p>

<h1>Load quantification data from files</h1>

<div class="row">
  <div class="col-sm-12">
    <form>
      <div class="field">
        Load Nanodrop quantification file (.tsv)
      </div>
      <div class="field">
        Load Qubit quantification file (.csv)
      </div>
      <button type="submit" class="btn btn-primary">
        Submit the loaded files
      </button>
      <button type="reset" class="btn btn-default">
        Unload files
      </button>
    </form>
  </div>
</div>

<h1>
  Dna Samples
  <%= link_to 'Create a new DNA Sample', new_dna_sample_path,
    class: "btn btn-default" %>
</h1>


<table class='table table-striped table-condensed'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Patient</th>
      <th>Extraction date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dna_samples.each do |dna_sample| %>
      <tr>
        <td><%= dna_sample.id %></td>
        <td><%= dna_sample.patient.full_name %></td>
        <td><%= dna_sample.extraction_date %></td>
        <td><%= link_to 'Show', dna_sample %></td>
        <td><%= link_to 'Edit', edit_dna_sample_path(dna_sample) %></td>
        <td><%= link_to 'Destroy', dna_sample, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
