<div class="header">
  <div class="title">
    <h1>
      <%= fa_icon 'th' %>
      Libraries
    </h1>
  </div>
  <div class="actions">
    <%= link_to 'Build a new library', new_library_path, class: 'btn btn-default' %>
  </div>
</div>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Project</th>
      <th>Library DNAs</th>
      <th>Used in these<br>sequencings</th>
      <th>Laboratory</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @libraries.decorate.each do |library| %>
        <!-- Main row -->
        <tr class="display-row collapsed" data-toggle="collapse" data-target="#detail-<%= library.id %>" class="accordion-toggle">
          <td><%= library.id %></td>
          <td class="project-tag"><%= library.project_html_tags %></td>
          <td><%= library.library_dnas.count %></td>
          <td><%= library.sequencings.map(&:id).join(', ') %></td>
          <td><%= library.laboratory %></td>
          <td><%= link_to 'Edit', edit_library_path(library) %></td>
        </tr>

        <!-- Details box -->
        <tr class="hidden-row">
          <td colspan="6">
            <div class="accordion-body collapse" id="detail-<%= library.id %>">
              <div class="card">

                <%= render library %>

              </div><!-- .card -->
            </div><!-- .accordion-body -->
          </td>
        </tr>

    <% end %>
  </tbody>
</table>
