<h1><%= fa_icon 'book' %> Notebooks</h1>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @notebooks.each do |notebook| %>
      <tr>
        <td><%= link_to notebook.title, notebook %></td>
        <td><%= notebook.description %></td>
        <td><%= notebook.date %></td>
        <td><%= link_to 'Edit', edit_notebook_path(notebook) %></td>
        <td><%= link_to 'Destroy', notebook, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>
<h2>Upload a new notebook</h2>

<%= render 'form' %>

