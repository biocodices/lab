<div class="card">
  <div class="card__title">Patient details:</div>
  <ul>
    <% if patient.first_name || patient.last_name %>
      <li>First Name: <%= patient.first_name %></li>
      <li>Last Name: <%= patient.last_name %></li>
    <% elsif patient.acronym %>
      <li>Acronym: <%= patient.acronym %></li>
    <% end %>
    <% if patient.birthdate %>
      <li>Date of birth: <%= patient.birthdate %> (<%= patient.age %>)</li>
    <% end %>
    <li>Institutions: <%= patient.institutions.join(', ') %></li>
    <li>Doctors: <%= patient.doctors.join(', ') %></li>
  </ul>
</div>
