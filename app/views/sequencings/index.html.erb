<div class="header">
  <div class="title">
    <h1>
      <%= fa_icon 'braille' %>
      Sequencings
    </h1>
  </div>
  <div class="actions">
    <%= link_to 'Set up a new sequencing', new_sequencing_path, class: 'btn btn-default' %>
  </div>
</div>

<table class='table table-striped table-condensed'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Project</th>
      <th>Investigator name</th>
      <th>Pre seq date</th>
      <th>Run date</th>
    </tr>
  </thead>

  <tbody>
    <% @sequencings.each do |sequencing| %>
      <!-- Main row -->
      <tr class="display-row collapsedNOT" data-toggle="collapse"
          data-target="#detail-<%= sequencing.id %>" class="accordion-toggle">
        <td><%= sequencing.id %></td>
        <td><%= safe_join(sequencing.projects.map(&:decorate).map(&:tag), ',') %></td>
        <td><%= sequencing.investigator_name %></td>
        <td><%= sequencing.pre_seq_date %></td>
        <td><%= sequencing.run_date %></td>
      </tr>

      <!-- Details row -->
      <tr class="hidden-row">
        <td colspan="5">
          <div class="accordion-body collapse in" id="detail-<%= sequencing.id %>">

            <%= render sequencing %>

          </div><!-- accordion-body -->
        </td>
      </tr>

    <% end %>
  </tbody>

</table>
