<div class="header">
  <div class="title">
    <h1>
      <%= fa_icon 'braille' %>
      Sequencings
    </h1>
  </div>
  <div class="actions">
    <%= link_to 'Set up a new sequencing', new_sequencing_path, class: 'btn btn-default' %>
  </div>
</div>

<table class='table table-striped table-condensed'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Project</th>
      <th>DNA extractions</th>
      <th>Libraries used</th>
      <th>Investigator name</th>
      <th>Pre seq date</th>
      <th>Run date</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @sequencings.each do |sequencing| %>
      <!-- Main row -->
      <tr class="display-row collapsed" data-toggle="collapse"
          data-target="#detail-<%= sequencing.id %>" class="accordion-toggle">
        <td><%= sequencing.id %></td>
        <td class="project-tag"><%= sequencing.project_html_tags %></td>
        <td><%= sequencing.dna_extractions.count %></td>
        <td><%= sequencing.libraries.uniq.map(&:id).join(', ') %></td>
        <td><%= sequencing.investigator_name %></td>
        <td><%= sequencing.pre_seq_date %></td>
        <td><%= sequencing.run_date %></td>
        <td><%= link_to 'Edit', edit_sequencing_path(sequencing) %></td>
        <td><%= link_to 'Show', sequencing %></td>
      </tr>

      <!-- Details row -->
      <tr class="hidden-row">
        <td colspan="9">
          <div class="accordion-body collapse" id="detail-<%= sequencing.id %>">

            <%= render sequencing %>

          </div><!-- accordion-body -->
        </td>
      </tr>

    <% end %>
  </tbody>

</table>
