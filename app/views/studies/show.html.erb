<div class="header">
  <h1 class="title">
    <%= fa_icon 'id-card-o' %>
    Study <%= @study.tag %>
  </h1>
</div>

<p id="notice"><%= notice %></p>

<p>
  <strong>Project:</strong>
  <span class="project-tag <%= @study.project.tag %>">
    <%= @study.project.tag %>
  </span>
</p>

<p>
  <strong>Patient:</strong>
  <%= @study.patient.full_name %>
</p>

<p>
  <strong>Note:</strong>
  <%= @study.note %>
</p>

<p>
  <strong>Institution:</strong>
  <%= @study.institution %>
</p>

<p>
  <strong>Doctor full name:</strong>
  <%= @study.doctor_full_name %>
</p>

<p>
  <strong>Doctor email:</strong>
  <%= @study.doctor_email %>
</p>

<p>
  <strong>Request date:</strong>
  <%= @study.request_date %>
</p>

<p>
  <strong>Admission date:</strong>
  <%= @study.admission_date %>
</p>

<p>
  <strong>Request category:</strong>
  <%= @study.request_category %>
</p>

<%= link_to 'Edit', edit_study_path(@study) %> |
<%= link_to 'Back', studies_path %>
